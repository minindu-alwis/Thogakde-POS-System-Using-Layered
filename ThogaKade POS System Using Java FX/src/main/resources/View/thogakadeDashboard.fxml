<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="458.0" prefWidth="800.0" style="-fx-background-color: #FAFBFD;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Dashboard.togakadeDashboardFormController">
   <children>
      <!-- Header -->
      <HBox prefHeight="70.0" prefWidth="800.0" style="-fx-background-color: #1976D2; -fx-padding: 0 20; -fx-alignment: center-left;">
         <children>
            <Label style="-fx-font-size: 22; -fx-font-family: 'Segoe UI Semibold';" text="TogaKade Dashboard" textFill="white" />
            <ImageView fitHeight="47.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8-user-100.png" />
               </image>
            </ImageView>
         </children>
      </HBox>

      <!-- Side Navigation Panel -->
      <VBox layoutY="70.0" prefHeight="556.0" prefWidth="202.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 1 1 1 0; -fx-padding: 20 0;">
         <children>
            <Button onAction="#btnCustomerOnAction" style="-fx-background-color: transparent; -fx-text-fill: #1976D2; -fx-font-size: 16; -fx-font-family: 'Segoe UI Semibold'; -fx-border-color: transparent; -fx-padding: 15 20; -fx-alignment: center-left;" text="Customer" />
            <Button onAction="#btnItemFormOnAction" style="-fx-background-color: transparent; -fx-text-fill: #1976D2; -fx-font-size: 16; -fx-font-family: 'Segoe UI Semibold'; -fx-border-color: transparent; -fx-padding: 15 20; -fx-alignment: center-left;" text="Item" />
            <Button fx:id="OrderButtonlbl" onAction="#btnOrderFormAction" style="-fx-background-color: transparent; -fx-text-fill: #1976D2; -fx-font-size: 16; -fx-font-family: 'Segoe UI Semibold'; -fx-border-color: transparent; -fx-padding: 15 20; -fx-alignment: center-left;" text="Order" />
            <ImageView fitHeight="220.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8-cart-100.png" />
               </image>
            </ImageView>
         </children>
      </VBox>

      <!-- Main Dashboard Area -->
      <AnchorPane fx:id="dashboardAncorPane" layoutX="200.0" layoutY="70.0" prefHeight="556.0" prefWidth="600.0" style="-fx-background-color: #F9FBFC; -fx-border-color: #E0E0E0; -fx-border-width: 1;">
         <Label layoutX="30.0" layoutY="30.0" style="-fx-font-size: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-text-fill: #333333;" text="Welcome to the Dashboard!" />
         <Label layoutX="30.0" layoutY="70.0" style="-fx-font-size: 16; -fx-font-family: 'Segoe UI'; -fx-text-fill: #555555;" text="Manage your customers, items, and orders with ease." />
      </AnchorPane>
   </children>
</AnchorPane>
